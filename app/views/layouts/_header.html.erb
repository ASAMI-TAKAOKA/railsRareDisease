<header>
  <div class="container">
    <nav class="navbar navbar-expand navbar-dark bg-info fixed-top">
      <%= image_tag 'logo/logo.png', class: 'navbar-brand', size: '70x55' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <% if user_signed_in? %>
                <li>
                  <%= link_to "ユーザー一覧", users_path, class: "btn btn-light mr-3" %>
                </li>

                <li>
                  <%= link_to "プロフィール", current_user, class: "btn btn-light mr-3" %>
                </li>

                <li>
                  <%= link_to "投稿一覧", posts_path, class: "btn btn-light mr-3" %>
                </li>

                <li>
                  <%= link_to "ログアウト", users_sign_out_path, method: "delete", class: "btn btn-light mr-3" %>
                </li>
              <% else %>
                <li>
                  <%= link_to "ログイン", new_user_session_path, class: "btn btn-light mr-3" %>
                </li>
                <li>
                  <%= link_to "会員登録", new_user_registration_path, class: "btn btn-light mr-3" %>
                </li>
              <% end %>
            </ul>
      </div>
    </nav>
  </div>
</header>